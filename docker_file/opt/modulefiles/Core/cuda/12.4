#%Module1.0#####################################################################
##
## cuda 12.4 modulefile
##
proc ModulesHelp { } {
        global version modroot

        puts stdout "\t loads CUDA $version \n"
}

module-whatis   "loads CUDA 12.4"

# for Tcl script use only
set     version      12.4
set     root         /usr/local/cuda-${version}
setenv  CUDA_HOME    $root

append-path    PATH                    $root/bin
append-path    LD_LIBRARY_PATH         $root/lib
append-path    INCLUDE                 $root/include
append-path    MANPATH                 $root/doc/man
